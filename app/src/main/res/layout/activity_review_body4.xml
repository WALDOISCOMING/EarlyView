<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="13dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="제품 근접 사진" />

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="16dp"
        android:background="@drawable/line_border"/>

    <Button
        android:id="@+id/picUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemImage"
        android:layout_below="@+id/itemImage"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="15dp"
        android:text="사진 업로드" />

    <EditText
        android:id="@+id/compFavorText"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/itemImage"
        android:layout_below="@+id/picUpload"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="제품 사용중 \n마음에 들었던 부분과 이유를 적어주세요\n(4줄이상)"
        android:background="@drawable/line_border"
        android:inputType="textMultiLine"
        android:layout_alignEnd="@+id/nextBtn" />

    <TextView
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="5/8" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:layout_above="@+id/pager"
        android:layout_alignEnd="@+id/itemImage" />

    <Button
        android:id="@+id/befBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:layout_above="@+id/pager"
        android:layout_alignStart="@+id/itemImage" />

</RelativeLayout>