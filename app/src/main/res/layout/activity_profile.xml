<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:text="관심있는 제퓸군"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/interestA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="11dp"
        android:text="가전" />

    <CheckBox
        android:id="@+id/interestB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/interestC"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/interestC"
        android:text="라이프 스타일" />

    <CheckBox
        android:id="@+id/interestC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/interestA"
        android:layout_below="@+id/interestA"
        android:layout_marginTop="11dp"
        android:text="오디오" />

    <CheckBox
        android:id="@+id/interestD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/interestB"
        android:layout_alignTop="@+id/interestC"
        android:text="스마트 디바이스" />

    <CheckBox
        android:id="@+id/interestE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/interestC"
        android:layout_below="@+id/interestC"
        android:layout_marginTop="11dp"
        android:text="컴퓨터" />

    <CheckBox
        android:id="@+id/interestF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/interestD"
        android:layout_alignTop="@+id/interestE"
        android:text="이동수단" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/interestE"
        android:layout_below="@+id/interestE"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/re_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="re-password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/re_password"
        android:layout_marginBottom="23dp"
        android:text="수정" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/interestB"
        android:layout_alignTop="@+id/editBtn"
        android:text="취소" />

</RelativeLayout>